.container.be-detail-container
  .row
    .col-xs-12.col-md-offset-3.col-md-6._editor-content_
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .be-large-post
          .info-block.style-2
            .be-large-post-align
              %h3.info-block-label Forgot your password?
          .be-large-post-align
            .row
              .input-col.col-xs-12.col-sm-12
                .form-group.fg_icon.focus-2
                  .form-label Email
                  =f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input"

        =f.submit "Send me reset password instructions", class: "btn full color-1 size-1 hover-1 add_section", id: 'perform_login'

        = render "devise/shared/links"
